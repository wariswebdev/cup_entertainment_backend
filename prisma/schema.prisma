generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Movie {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  releaseDate   DateTime
  duration      Int       
  genre         String[]  
  posterUrl     String
  trailerUrl    String?
  videoUrl      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model TVShow {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  firstAired    DateTime
  totalSeasons  Int
  totalEpisodes Int
  genre         String[]  
  posterUrl     String
  trailerUrl    String?
  status        String   // e.g., "Ongoing", "Ended", "Cancelled"
  network       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}